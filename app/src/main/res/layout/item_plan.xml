<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                style="?attr/actionButtonStyle"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_more"
                android:layout_alignParentEnd="true"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_margin="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/planName"
                        android:textColor="@color/colorPrimary"
                        android:text="PLAN A"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Al Maadi" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/invitees"
                        android:text="400+ Family  friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/budget"
                        android:text="Planned Coast : 10000 L.E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <dev.m.hussein.jobtask.ui.custom.progress.ArcProgress
                    android:id="@+id/progress"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    app:arc_finished_color="@color/colorPrimary"
                    app:arc_unfinished_color="@color/unfinished_progress"
                    app:arc_progress="50"
                    app:arc_stroke_width="6dp"
                    app:arc_angle="360"
                    app:arc_max="100"
                    app:arc_title_is_in_center="true"
                    app:arc_title_text="50%"
                    app:arc_title_text_color="@color/colorPrimary"
                    app:arc_title_text_size="22sp"
                    android:layout_height="150sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>